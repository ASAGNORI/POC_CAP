{
  "xsappname": "POC_CAP-auth",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Admin access"
    },
    {
      "name": "$XSAPPNAME.User",
      "description": "User access"
    }
  ],
  "role-templates": [
    {
      "name": "Admin",
      "description": "Administrator Role",
      "scope-references": [
        "$XSAPPNAME.Admin"
      ]
    },
    {
      "name": "User",
      "description": "User Role",
      "scope-references": [
        "$XSAPPNAME.User"
      ]
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [
      "https://8488eb65trial-8488eb65trial-ext-dev-poc-cap.cfapps.us10-001.hana.ondemand.com/**"
    ],
    "grantTypes": [
      "password",
      "authorization_code",
      "client_credentials",
      "refresh_token"
    ],
    "tokenValidity": 3600,
    "refreshTokenValidity": 86400
  }
}
